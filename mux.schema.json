{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Manage tmux sessions",
  "properties": {
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "dir": {
            "type": "string"
          },
          "zeroIndex": {
            "type": "boolean",
            "default": false
          },
          "selectWindow": {
            "type": "integer"
          },
          "windows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "dir": {
                  "type": "string"
                },
                "layout": {
                  "type": "string",
                  "enum": ["default", "columns", "rows"],
                  "default": "default"
                },
                "splitPercent": {
                  "type": "integer"
                },
                "panes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "dir": {
                        "type": "string"
                      },
                      "command": {
                        "type": "string"
                      },
                      "execute": {
                        "type": "boolean",
                        "default": true
                      }
                    }
                  }
                }
              },
              "required": ["name", "panes"]
            }
          }
        },
        "required": ["name", "dir", "windows"]
      }
    }
  },
  "required": ["sessions"]
}
